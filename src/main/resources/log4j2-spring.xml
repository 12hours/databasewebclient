<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level} %logger{36} - %msg%n"/>
        </Console>

        <File name="DatabaseLogAppender" fileName="logs/db.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %msg%n"/>
        </File>

        <RollingFile name="RollingFileAppender" fileName="app.log"
                     filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d [%t] %p %c - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>

    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
        </Root>

        <logger name="com" level="DEBUG">
            <AppenderRef ref="RollingFileAppender"/>
        </logger>

        <logger name="com.example.demo.components.DatabaseOpsEventListener" level="DEBUG">
            <AppenderRef ref="DatabaseLogAppender"/>
        </logger>
    </Loggers>
</Configuration>